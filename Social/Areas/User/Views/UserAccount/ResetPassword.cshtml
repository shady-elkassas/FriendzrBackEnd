<body id="kt_body" class="bg-body; ">
    <!--begin::Main-->
    
    <div class="d-flex flex-column flex-root">
        <!--begin::Authentication - Sign-in -->
        <div class="d-flex flex-column flex-lg-row flex-column-fluid">
            <!--begin::Aside-->
                       
            <!--end::Aside-->
            <!--begin::Body-->
                  

            <div class="d-flex flex-column flex-lg-row-fluid py-10">

                <!--begin::Content-->
                <div class="d-flex flex-center flex-column flex-column-fluid">
                    
                         <div  >
                 <img  src="~/assets/media/logos/favicon.ico" style="border-radius:50%; margin-bottom:60px;"/>
                 </div>
                 <div>
                 <h1 style="color: #6fd896; font-size:2.3rem;">Welcome to Friendzr </h1>
                 </div>
            </div>

                    <!--begin::Wrapper-->
                    <div class="w-lg-500px p-10 p-lg-15 mx-auto">
                        <!--begin::Form-->
                        <form class="form w-100" novalidate="novalidate" action="/User/UserAccount/ResetPassword" method="post">
                            <input asp-for="Token" type="hidden" />
                            <input asp-for="Email" type="hidden" />
                            <!--begin::Heading-->
                            <div class="text-center mb-10">
                                <!--begin::Title-->
                                <h3 class="text-dark mb-3">Enter your new password</h3>
                                <div class="fv-plugins-message-container invalid-feedback">
                                    <div asp-validation-summary="All" class="text-danger"></div>

                                </div>

                            </div>

                            <div class="fv-row fv-plugins-icon-container" data-kt-password-meter-custom="true">

                                <div class="mb-1">

                                    <label class="form-label fw-bolder text-dark fs-6" asp-for="Password"></label>

                                    <div class="position-relative mb-3">
                                        <input class="form-control form-control-lg form-control-solid" type="password" placeholder="" asp-for="Password" autocomplete="off" />
                                        <span class="btn btn-sm btn-icon position-absolute translate-middle top-50 end-0 me-n2" data-kt-password-meter-custom-control="visibility">
                                            <i class="bi bi-eye-slash fs-2"></i>
                                            <i class="bi bi-eye fs-2 d-none"></i>
                                        </span>
                                    </div>

                                    <div class="d-flex align-items-center mb-3" data-kt-password-meter-custom-control="highlight">
                                        <div class="flex-grow-1 bg-secondary bg-active-danger rounded h-5px me-2"></div>
                                        <div class="flex-grow-1 bg-secondary bg-active-success rounded h-5px me-2"></div>
                                        <div class="flex-grow-1 bg-secondary bg-active-success rounded h-5px me-2"></div>
                                        <div class="flex-grow-1 bg-secondary bg-active-success rounded h-5px"></div>
                                    </div>
                                </div>
                                <div class="fv-plugins-message-container invalid-feedback">
                                    <span asp-validation-for="Password"></span>
                                </div>


                            </div>
                            <div class="fv-row fv-plugins-icon-container" data-kt-password-meter-custom="true">

                                <div class="mb-1">

                                    <label class="form-label fw-bolder text-dark fs-6" asp-for="ConfirmPassword"></label>

                                    <div class="position-relative mb-3">
                                        <input class="form-control form-control-lg form-control-solid" type="password" placeholder="" asp-for="ConfirmPassword" autocomplete="off" />
                                        <span class="btn btn-sm btn-icon position-absolute translate-middle top-50 end-0 me-n2" data-kt-password-meter-custom-control="visibility">
                                            <i class="bi bi-eye-slash fs-2"></i>
                                            <i class="bi bi-eye fs-2 d-none"></i>
                                        </span>
                                    </div>

                                    <div class="d-flex align-items-center mb-3" data-kt-password-meter-custom-control="highlight">
                                        <div class="flex-grow-1 bg-secondary bg-active-danger rounded h-5px me-2"></div>
                                        <div class="flex-grow-1 bg-secondary bg-active-success rounded h-5px me-2"></div>
                                        <div class="flex-grow-1 bg-secondary bg-active-success rounded h-5px me-2"></div>
                                        <div class="flex-grow-1 bg-secondary bg-active-success rounded h-5px"></div>
                                    </div>
                                </div>
                                <div class="fv-plugins-message-container invalid-feedback">
                                    <span asp-validation-for="ConfirmPassword"></span>
                                </div>


                            </div>

                            <!--end::Input group-->
                            <!--begin::Actions-->
                            <div class="text-center">
                                <!--begin::Submit button-->
                                <button type="submit" class="btn btn-lg btn-primary w-100 mb-5">
                                    <span class="indicator-label">Reset</span>
                                    <span class="indicator-progress">
                                        Please wait...
                                        <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                                    </span>
                                </button>

                            </div>
                            <!--end::Actions-->
                        </form>
                        <!--end::Form-->
                    </div>
                    <!--end::Wrapper-->
                </div>
                <!--end::Content-->
                <!--begin::Footer-->
                <!--<div class="d-flex flex-center flex-wrap fs-6 p-5 pb-0">-->
